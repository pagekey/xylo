{
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "*": [
                "./node_modules/*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "../.xylo/frontend/next-env.d.ts",
        "**/*.ts",
        "../.xylo/frontend/**/*.ts",
        "**/*.tsx",
        "../.xylo/frontend/**/*.tsx",
        ".next/types/**/*.ts",
        "../.xylo/frontend/.next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
